<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/part_superior"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/taronja"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/part_superior"
        app:layout_constraintEnd_toEndOf="@+id/part_superior"
        app:layout_constraintStart_toStartOf="@+id/part_superior"
        app:layout_constraintTop_toTopOf="@+id/part_superior"
        tools:text="Nom aplicacio" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnMenu"
        android:layout_width="35dp"
        android:layout_height="55dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/btn_menu"
        app:layout_constraintBottom_toBottomOf="@+id/part_superior"
        app:layout_constraintStart_toStartOf="@+id/part_superior"
        app:layout_constraintTop_toTopOf="@+id/part_superior"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>